<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lotus.dialogdemo.MainActivity">

    <TextView

        android:id="@+id/share_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="share_dialog"
        android:padding="10dp"
        android:gravity="center" />

    <TextView

        android:id="@+id/listview_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="listview dialog"
        android:padding="10dp"
        android:gravity="center" />


    <TextView
        android:id="@+id/input_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="input dialog"
        android:padding="10dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/center_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="center dialog"
        android:padding="10dp"
        android:gravity="center"  />


</LinearLayout>
